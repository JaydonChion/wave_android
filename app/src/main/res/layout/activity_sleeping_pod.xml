<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SleepingPodActivity">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/sleepingPodToolbar"
            android:elevation="8dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_circle_background_color="#fe8b8e"
            android:scaleType="centerCrop"
            android:layout_marginTop="100dp"
            android:src="@drawable/bed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="32dp"
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"
            android:fontFamily="@font/helvetica_bold"
            android:textAllCaps="true"
            android:text="Sleeping Pod Booking Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="@font/helvetica_light"
            android:textColor="@color/colorTextDark"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Book &amp; check in to a sleeping pod with wave."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="@font/helvetica_light"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:text="Coming soon (end July 2019)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorTextDark"
            android:textSize="12sp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:text="@string/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorTextLight"
            android:fontFamily="sans-serif-light"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/website_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
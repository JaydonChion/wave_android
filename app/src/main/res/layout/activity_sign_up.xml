<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wave.digitalidentity.Activities.SignUpActivity">
    <LinearLayout
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="24dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/signUpLogoImageView"
            tools:src="@drawable/logo"
            android:layout_width="128dp"
            android:layout_height="96dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signUpNameEditText"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                android:fontFamily="@font/helvetica_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signUpEmailEditText"
                android:hint="Email Address"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/helvetica_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signUpMatricEditText"
                android:hint="Student Matric"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                android:inputType="textCapCharacters"
                android:fontFamily="@font/helvetica_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signUpPasswordEditText"
                android:hint="Password"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:fontFamily="@font/helvetica_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signUpConfirmPasswordEditText"
                android:hint="Confirm Password"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:fontFamily="@font/helvetica_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/signUpNextButton"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:text="Next"
            android:alpha="0.70"
            android:fontFamily="@font/helvetica_bold"
            android:background="@drawable/rounded_button_accent"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="16dp"
            android:text="By joining Wave, you agree to the General Terms of Use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
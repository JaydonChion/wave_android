<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.IdentityFragment">

    <LinearLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.card.MaterialCardView
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/identityCardProfilePictureImageView"
                        tools:src="@drawable/logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <LinearLayout
                        android:layout_marginStart="16dp"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/identityCardUserNameTextView"
                            android:text="User Name"
                            android:textSize="16sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/servicesCardMatricTextView"
                            android:textSize="14sp"
                            android:text="Student Matric"
                            android:fontFamily="@font/helvetica_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/identityCardEmailTextView"
                            android:textSize="14sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:text="email@address.com"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/identityCardQRCodeImageView"
                    android:layout_width="180dp"
                    android:layout_height="180dp" />

            </LinearLayout>
        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/colorTextDark"
                    android:textSize="24sp"
                    android:text="Timeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hourglass"
                    android:layout_width="70dp"
                    android:layout_height="74dp" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp"
                    android:text="Currently in progress\nComing soon (TBD)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/colorTextDark"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:text="@string/website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/colorTextLight"
                    android:fontFamily="sans-serif-light"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/website_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.design.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
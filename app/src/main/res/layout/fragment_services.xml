<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.wave.digitalidentity.Fragments.ServicesFragment">
    <LinearLayout
        android:clipToPadding="false"
        android:clipChildren="false"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="0"
            android:text="Available in Nanyang Technological University"
            android:textAllCaps="true"
            android:textColor="@color/colorTextLight"
            android:textSize="10sp" />

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="Events"
                    android:textColor="@color/colorTextDark"
                    android:textSize="24sp" />

                <LinearLayout
                    android:id="@+id/servicesGoodieBagCollectionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shopping_bag"
                        app:civ_circle_background_color="#398860" />

                    <TextView
                        android:layout_width="199dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Friends of children Goodie Bag Collection"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextDark"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_margin="8dp"
            app:contentPadding="8dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="Services"
                    android:textColor="@color/colorTextDark"
                    android:textSize="24sp" />


                <LinearLayout
                    android:id="@+id/servicesHiveMobileAccessLayout"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/id_card"
                        app:civ_circle_background_color="#c792f5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Hive &amp; Arc Mobile Access"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextDark"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:background="@color/colorTextDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/servicesLeeWeeNamMobileAccessLayout"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        app:civ_circle_background_color="#f5a623"
                        android:src="@drawable/books"
                        android:scaleType="centerCrop"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Lee Wee Nam Mobile Access"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextDark"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:background="@color/colorTextDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/servicesSleepingPodBookingLayout"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        app:civ_circle_background_color="#fe8b8e"
                        android:src="@drawable/bed"
                        android:scaleType="centerCrop"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Sleeping Pod Booking"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextDark"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="73dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/comingsoon" />
                </LinearLayout>

                <View
                    android:background="@color/colorTextDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/servicesHallAccessLayout"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        app:civ_circle_background_color="#5ac8fa"
                        android:src="@drawable/house"
                        android:scaleType="centerCrop"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Hall Access"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextDark"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="73dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/comingsoon" />
                </LinearLayout>

            </LinearLayout>
        </android.support.design.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.DiscoverFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="16dp"
            android:textSize="14sp"
            android:textColor="@color/colorTextLight"
            android:text="Available in Nanyang Technological University"
            android:fontFamily="@font/helvetica_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/colorTextDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/discoverCardReaderAccessCardView"
            app:contentPadding="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/key_card"
                    android:tint="@color/colorTextDark"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <TextView
                    android:layout_margin="16dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="16sp"
                    android:fontFamily="@font/helvetica_bold"
                    android:layout_weight="1"
                    android:text="Card Reader Access"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/ic_add_black_24dp"
                    android:tint="@color/colorTextDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:background="@color/colorTextDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/discoverLibraryFinesCardView"
            app:contentPadding="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/bill_2"
                    android:tint="@color/colorTextDark"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <TextView
                    android:layout_margin="16dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="16sp"
                    android:text="Library Fines"
                    android:fontFamily="@font/helvetica_bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/ic_add_black_24dp"
                    android:tint="@color/colorTextDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:background="@color/colorTextDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/discoverSleepingPodCardView"
            app:contentPadding="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/sleeping_bag"
                    android:tint="@color/colorTextDark"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <TextView
                    android:layout_margin="16dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="16sp"
                    android:text="Sleeping Pod"
                    android:fontFamily="@font/helvetica_bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/ic_add_black_24dp"
                    android:tint="@color/colorTextDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:background="@color/colorTextDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </LinearLayout>
</ScrollView>
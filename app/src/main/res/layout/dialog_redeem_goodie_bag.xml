<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:fontFamily="@font/helvetica_bold"
        android:textColor="@color/colorTextDark"
        android:textSize="20sp"
        android:text="Thank You!"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/colorTextLight"
        android:textSize="16sp"
        android:text="Please collect your goodie bag from one of the student helpers!"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#89ff0202"
        android:textSize="16sp"
        android:text="Please do not click on the redeem button until instructed by the student helpers, thank you."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:fontFamily="@font/helvetica_bold"
        android:textColor="@android:color/white"
        android:text="REDEEM"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
